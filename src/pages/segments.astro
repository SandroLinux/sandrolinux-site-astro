---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_TITLE_HEAD, SITE_DESCRIPTION } from '../config';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE_HEAD} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<h1>Segments</h1>
            <p>There are currently four segments to Sandro's Saturday Sum Up</p>
            <ul>
                <li>Headline Story</li>
                <li>Android News</li>
                <li>Linux News</li>
                <li>Miscellaneous News</li>
            </ul>
		</main>
		<Footer />
	</body>
</html>
